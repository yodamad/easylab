{
  "name": "lab-as-code",
  "version": "1.0.0",
  "description": "Lab as Code - Web application for managing cloud infrastructure labs",
  "scripts": {
    "test": "playwright test",
    "test:ui": "playwright test --ui",
    "test:headed": "playwright test --headed",
    "test:debug": "playwright test --debug",
    "test:chaos": "playwright test tests/chaos/",
    "test:chaos:headed": "playwright test tests/chaos/ --headed",
    "test:chaos:network": "playwright test tests/chaos/network-chaos.spec.ts",
    "test:chaos:server": "playwright test tests/chaos/server-chaos.spec.ts",
    "test:chaos:ui": "playwright test tests/chaos/ui-chaos.spec.ts",
    "test:chaos:api": "playwright test tests/chaos/api-chaos.spec.ts",
    "test:coverage": "COLLECT_COVERAGE=true playwright test",
    "test:coverage:headed": "COLLECT_COVERAGE=true playwright test --headed"
  },
  "devDependencies": {
    "@playwright/test": "1.57.0",
    "@types/node": "^20.0.0",
    "typescript": "^5.0.0"
  },
  "private": true
}

